<div class="ai-window" id="aiWindow">
    <!-- Drag Handle -->
    <div class="ai-header" id="aiHeader">
        <span style="display:flex; align-items:center; gap:10px;"><i class="fas fa-robot"></i> AI Assistant</span>
        <button type="button" id="closeAi" style="background:none; border:none; color:white; cursor:pointer; font-size:1.2rem; padding:0 5px;">&times;</button>
    </div>
    
    <!-- Chat Body -->
    <div class="ai-body" id="aiBody">
        <div class="ai-msg bot">
            <strong>Hello!</strong> I can help you write titles, refine excerpts, or expand your content.<br><br>
            Click a button in the form to start, or type a request below.
        </div>
    </div>
    
    <!-- Footer Input -->
    <div class="ai-footer">
        <textarea id="aiInput" class="ai-input" placeholder="Type instructions here..." rows="1"></textarea>
        <button type="button" id="aiSend" class="btn btn-primary" style="padding:0; width:44px; height:44px; border-radius:50%; display:flex; align-items:center; justify-content:center;">
            <i class="fas fa-paper-plane"></i>
        </button>
    </div>
</div>

{{#section 'scripts'}}
<script>
    (function () {
        /* ==========================================================================
           1. HYBRID AI SYSTEM LOGIC
           ========================================================================== */
        let currentAiContext = null; // 'title', 'excerpt', 'content'

        // A. OPEN CHAT WINDOW (For Text Fields)
        window.openAiChat = function(action) {
            currentAiContext = action;
            const win = document.getElementById('aiWindow');
            const input = document.getElementById('aiInput');
            
            // 1. Show Window
            win.classList.add('active');
            
            // 2. Pre-fill Prompt based on action
            let promptText = "";
            if (action === 'title') {
                promptText = "Generate title for this post based on the content.";
            } else if (action === 'excerpt') {
                promptText = "Summarize this post into a 2to5-sentence SEO excerpt.";
            } else if (action === 'content') {
                promptText = "Write an introduction paragraph for this post.";
            }
            
            input.value = promptText;
            
            // Auto-resize the textarea
            input.style.height = 'auto';
            input.style.height = (input.scrollHeight) + 'px';
            
            input.focus();
        };

        // B. DIRECT ACTIONS (For Tags/Categories - No Chat)
        window.triggerAutoAction = async function(action) {
            const btn = event.currentTarget;
            const originalHTML = btn.innerHTML;
            
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ...';
            btn.disabled = true;

            const context = {
                content: document.getElementById('content').value,
                title: document.getElementById('title').value
            };

            if(!context.content && !context.title) {
                showNotification("Please write some content or a title first!", "error");
                btn.innerHTML = originalHTML;
                btn.disabled = false;
                return;
            }

            try {
                const response = await fetch('/dashboard/api/ai-assist', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ action, context })
                });
                const res = await response.json();

                if (!res.success) throw new Error(res.error);

                if (action === 'tags') {
                    // Expecting comma-separated string
                    const tags = res.data.split(',');
                    let count = 0;
                    tags.forEach(t => {
                        const cleanT = t.trim();
                        if(cleanT) { addTag(cleanT); count++; }
                    });
                    showNotification(`Generated ${count} tags.`);
                } 
                else if (action === 'categories') {
                    // Expecting { categoryIds: [] }
                    const ids = res.data.categoryIds;
                    if (ids && ids.length) {
                        ids.forEach(id => addCategory(id));
                        showNotification(`Selected ${ids.length} categories.`);
                    } else {
                        showNotification("No matching categories found in database.", "error");
                    }
                }
            } catch (e) {
                showNotification("AI Error: " + e.message, "error");
            } finally {
                btn.innerHTML = originalHTML;
                btn.disabled = false;
            }
        };

        // C. CHAT LOGIC (Send & Receive)
        const aiInput = document.getElementById('aiInput');
        const aiSend = document.getElementById('aiSend');
        const aiBody = document.getElementById('aiBody');

        // Auto-expand textarea logic
        aiInput.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });

        async function sendChat() {
            const text = aiInput.value.trim();
            if(!text) return;

            // 1. Add User Message
            appendChatMsg(text, 'user');
            aiInput.value = '';
            aiInput.style.height = '44px'; // Reset height
            
            const loaderId = appendLoader();

            // 2. Prepare Context (Current state of form)
            const context = {
                title: document.getElementById('title').value,
                excerpt: document.getElementById('excerpt').value,
                content: document.getElementById('content').value.substring(0, 3000), // Limit size for API token safety
                currentTitle: document.getElementById('title').value,
                currentExcerpt: document.getElementById('excerpt').value
            };

            // 3. Send API Request
            try {
                const response = await fetch('/dashboard/api/ai-assist', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        action: currentAiContext || 'chat', // Use context if set, else generic chat
                        prompt: text, 
                        context 
                    })
                });
                const res = await response.json();
                removeLoader(loaderId);

                if (res.success) {
                    // If we have a specific context (Title/Excerpt), show Apply button
                    const showApply = !!currentAiContext;
                    appendChatMsg(res.data, 'bot', showApply);
                } else {
                    appendChatMsg("Error: " + res.error, 'bot');
                }
            } catch (e) {
                removeLoader(loaderId);
                appendChatMsg("Network Connection Error", 'bot');
            }
        }

        aiSend.addEventListener('click', sendChat);
        aiInput.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendChat();
            }
        });

        // UI Helpers for Chat
        function appendChatMsg(text, sender, showApply = false) {
            const div = document.createElement('div');
            div.className = `ai-msg ${sender}`;
            
            // Convert newlines to breaks for display
            div.innerHTML = text.replace(/\n/g, '<br>');

            if (sender === 'bot' && showApply && currentAiContext) {
                const btn = document.createElement('button');
                btn.className = 'ai-apply-btn';
                let label = "Apply";
                if(currentAiContext === 'title') label = "Use this Title";
                if(currentAiContext === 'excerpt') label = "Use this Excerpt";
                if(currentAiContext === 'content') label = "Replace Content";
                
                btn.innerHTML = `<i class="fas fa-check"></i> ${label}`;
                btn.onclick = () => applyToField(text);
                
                div.appendChild(document.createElement('br'));
                div.appendChild(btn);
            }
            aiBody.appendChild(div);
            // Scroll to bottom
            aiBody.scrollTop = aiBody.scrollHeight;
        }

        function applyToField(text) {
            // Basic cleanup: remove surrounding quotes if AI added them
            const cleanText = text.replace(/^"|"$/g, '').trim();

            if (currentAiContext === 'title') {
                document.getElementById('title').value = cleanText;
            } else if (currentAiContext === 'excerpt') {
                document.getElementById('excerpt').value = cleanText;
            } else if (currentAiContext === 'content') {
                const editor = document.getElementById('content');
                // Replace content entirely
                editor.value = cleanText; 
                // If live preview is active, update it
                if(document.getElementById('markdownPreview').style.display !== 'none') {
                    window.handleLivePreview();
                }
            }
            showNotification(`${currentAiContext.toUpperCase()} Updated Successfully!`);
        }

        function appendLoader() {
            const id = 'loader-' + Date.now();
            const div = document.createElement('div');
            div.id = id;
            div.className = 'ai-msg bot';
            div.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> AI is thinking...';
            aiBody.appendChild(div);
            aiBody.scrollTop = aiBody.scrollHeight;
            return id;
        }

        function removeLoader(id) {
            const el = document.getElementById(id);
            if(el) el.remove();
        }

        // Draggable Window Logic
        const header = document.getElementById('aiHeader');
        const win = document.getElementById('aiWindow');
        let isDragging = false, startX, startY, initialLeft, initialTop;

        header.addEventListener('mousedown', (e) => {
            if(e.target.id === 'closeAi') return;
            isDragging = true;
            startX = e.clientX;
            startY = e.clientY;
            const rect = win.getBoundingClientRect();
            initialLeft = rect.left;
            initialTop = rect.top;
            header.style.cursor = 'grabbing';
        });

        document.addEventListener('mousemove', (e) => {
            if(!isDragging) return;
            const dx = e.clientX - startX;
            const dy = e.clientY - startY;
            win.style.left = `${initialLeft + dx}px`;
            win.style.top = `${initialTop + dy}px`;
            // Reset standard positioning
            win.style.bottom = 'auto'; 
            win.style.right = 'auto';
        });

        document.addEventListener('mouseup', () => { 
            isDragging=false; 
            header.style.cursor='move'; 
        });
        
        document.getElementById('closeAi').addEventListener('click', () => {
            win.classList.remove('active');
            currentAiContext = null; 
        });

        /* ==========================================================================
           2. EXISTING FUNCTIONALITY (RESTORED)
           ========================================================================== */
        
        // --- TAGS LOGIC ---
        const tagContainer = document.getElementById('tagContainer');
        const tagSearch = document.getElementById('tagSearch');
        const tagResults = document.getElementById('tagResults');
        const manualAddTagBtn = document.getElementById('manualAddTag');
        
        // All tags available (from server template)
        const allTags = Array.from(document.querySelectorAll('#tagSelect option'))
                             .map(opt => ({name: opt.text, value: opt.value}))
                             .filter(t => t.value);

        window.addTag = function(text) {
            if (!text) return;
            text = text.replace(/['"]+/g, '').trim();
            if(!text) return;
            
            // Prevent duplicates
            const exists = Array.from(tagContainer.getElementsByClassName('tag')).some(t => t.innerText.replace('Ã—','').trim() === text);
            if (exists) return;
            
            const tag = document.createElement('span');
            tag.className = 'tag';
            tag.innerHTML = `${text}<button type="button" class="remove-tag">&times;</button>`;
            tagContainer.appendChild(tag);
        };

        // Manual Add Button
        manualAddTagBtn.addEventListener('click', () => {
            addTag(tagSearch.value);
            tagSearch.value = '';
        });
        
        // Search Filter
        tagSearch.addEventListener('input', (e) => {
            const val = e.target.value.toLowerCase();
            tagResults.innerHTML = '';
            if(!val) { tagResults.classList.remove('show'); return; }
            
            const matches = allTags.filter(t => t.name.toLowerCase().includes(val));
            if(matches.length > 0) {
                tagResults.classList.add('show');
                matches.forEach(t => {
                    const div = document.createElement('div');
                    div.className = 'search-result-item';
                    div.innerText = t.name;
                    div.onclick = () => { addTag(t.name); tagSearch.value=''; tagResults.classList.remove('show'); };
                    tagResults.appendChild(div);
                });
            } else {
                tagResults.classList.remove('show');
            }
        });
        
        tagSearch.addEventListener('keypress', (e) => {
            if(e.key === 'Enter') { e.preventDefault(); manualAddTagBtn.click(); }
        });

        // --- CATEGORIES LOGIC ---
        const categoryContainer = document.getElementById('categoryContainer');
        const categorySearch = document.getElementById('categorySearch');
        const categoryResults = document.getElementById('categoryResults');
        const manualAddCatBtn = document.getElementById('manualAddCategory');
        const categorySelect = document.getElementById('categorySelect');
        
        const allCategories = Array.from(categorySelect.options)
                                   .map(opt => ({name: opt.text, id: parseInt(opt.value)}))
                                   .filter(c => !isNaN(c.id));

        window.addCategory = function(id) {
            id = parseInt(id);
            if (!id) return;
            
            // Check existence
            const exists = Array.from(categoryContainer.getElementsByClassName('category')).some(c => parseInt(c.dataset.categoryId) === id);
            if(exists) return;
            
            // Get name
            const catObj = allCategories.find(c => c.id === id);
            if(!catObj) return;
            
            const span = document.createElement('span');
            span.className = 'category';
            span.dataset.categoryId = id;
            span.innerHTML = `${catObj.name}<button type="button" class="remove-category">&times;</button>`;
            categoryContainer.appendChild(span);
        };

        // Filter Logic
        categorySearch.addEventListener('input', (e) => {
            const val = e.target.value.toLowerCase();
            categoryResults.innerHTML = '';
            if(!val) { categoryResults.classList.remove('show'); return; }
            
            const matches = allCategories.filter(c => c.name.toLowerCase().includes(val));
            if(matches.length > 0) {
                categoryResults.classList.add('show');
                matches.forEach(c => {
                    const div = document.createElement('div');
                    div.className = 'search-result-item';
                    div.innerText = c.name;
                    div.onclick = () => { addCategory(c.id); categorySearch.value=''; categoryResults.classList.remove('show'); };
                    categoryResults.appendChild(div);
                });
            } else {
                categoryResults.classList.remove('show');
            }
        });

        // Close dropdowns on click outside
        document.addEventListener('click', (e) => {
            if(!e.target.closest('.tag-selector')) tagResults.classList.remove('show');
            if(!e.target.closest('.category-selector')) categoryResults.classList.remove('show');
        });

        // Remove Handlers
        tagContainer.addEventListener('click', e => { if(e.target.classList.contains('remove-tag')) e.target.parentElement.remove(); });
        categoryContainer.addEventListener('click', e => { if(e.target.classList.contains('remove-category')) e.target.parentElement.remove(); });

        // --- IMAGE HANDLING ---
        window.switchImageTab = (tab) => {
            document.querySelectorAll('.tab-content').forEach(el => el.style.display = 'none');
            document.getElementById(tab+'Tab').style.display = 'block';
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            event.target.classList.add('active');
            
            // If browse tab, load images
            if(tab === 'browse') {
                window.loadBucketImages();
            }
        };
        
        window.previewImageUrl = (input) => {
            const img = document.querySelector('#imagePreview img');
            if(input.value) {
                img.src = input.value;
                document.getElementById('imagePreview').style.display = 'block';
            }
        };

        // File Upload
        window.handleImageUpload = (input) => {
            const file = input.files[0];
            if(!file) return;
            
            const progress = document.querySelector('#uploadProgress .progress-bar');
            document.getElementById('uploadProgress').style.display = 'block';
            
            const formData = new FormData();
            formData.append('image', file);
            
            const xhr = new XMLHttpRequest();
            xhr.open('POST', '/dashboard/api/upload-image');
            
            xhr.upload.onprogress = (e) => {
                if(e.lengthComputable) {
                    const pct = (e.loaded / e.total) * 100;
                    progress.style.width = pct + '%';
                }
            };
            
            xhr.onload = () => {
                if(xhr.status === 200) {
                    const res = JSON.parse(xhr.responseText);
                    document.getElementById('previewImage').value = res.url;
                    previewImageUrl(document.getElementById('previewImage'));
                    switchImageTab('url');
                    showNotification("Image Uploaded!");
                } else {
                    showNotification("Upload Failed", "error");
                }
                document.getElementById('uploadProgress').style.display = 'none';
            };
            
            xhr.send(formData);
        };

        // R2 Gallery Browser (Mock logic connecting to existing API)
        window.loadBucketImages = (force = false) => {
            const grid = document.getElementById('imageGrid');
            if(!force && grid.children.length > 1) return; // Don't reload if already loaded
            
            grid.innerHTML = '<div style="padding:20px; text-align:center;"><i class="fas fa-spinner fa-spin"></i> Loading...</div>';
            
            fetch('/dashboard/api/r2/list-images', { method: 'POST' })
                .then(r => r.json())
                .then(data => {
                    grid.innerHTML = '';
                    if(data.images && data.images.length > 0) {
                        data.images.forEach(img => {
                            const div = document.createElement('div');
                            div.className = 'image-item';
                            div.innerHTML = `<img src="${img.url}" loading="lazy">`;
                            div.onclick = () => {
                                document.getElementById('previewImage').value = img.url;
                                previewImageUrl(document.getElementById('previewImage'));
                                switchImageTab('url');
                            };
                            grid.appendChild(div);
                        });
                    } else {
                        grid.innerHTML = '<p>No images found.</p>';
                    }
                })
                .catch(e => grid.innerHTML = '<p>Error loading images.</p>');
        };

        // --- MARKDOWN EDITOR & PREVIEW ---
        const contentTextarea = document.getElementById('content');
        
        window.insertMarkdown = (before, after) => {
            const start = contentTextarea.selectionStart;
            const end = contentTextarea.selectionEnd;
            const text = contentTextarea.value.substring(start, end);
            const replacement = before + text + after;
            contentTextarea.setRangeText(replacement, start, end, 'end');
            contentTextarea.focus();
            window.handleLivePreview();
        };
        
        window.insertLink = () => {
            const url = prompt("Enter URL:", "https://");
            if(url) insertMarkdown("[", "]("+url+")");
        };
        
        window.insertCodeBlock = () => {
            insertMarkdown("\n```javascript\n", "\n```\n");
        };
        
        window.toggleSplitView = () => {
            const parent = document.getElementById('editorContainer').parentElement.parentElement; // .form-group
            const preview = document.getElementById('markdownPreview');
            const wrapper = document.getElementById('editorWrapper');
            const editorDiv = document.getElementById('editorContainer');
            
            if(preview.style.display === 'none') {
                wrapper.classList.add('split-view');
                preview.style.display = 'block';
                window.handleLivePreview();
            } else {
                wrapper.classList.remove('split-view');
                preview.style.display = 'none';
            }
        };

        let previewTimeout;
        window.handleLivePreview = async () => {
            const text = contentTextarea.value;
            // Debounce
            clearTimeout(previewTimeout);
            previewTimeout = setTimeout(async () => {
                try {
                    const res = await fetch('/dashboard/api/markdown-preview', {
                        method: 'POST',
                        headers: {'Content-Type': 'application/json'},
                        body: JSON.stringify({markdown: text})
                    });
                    const data = await res.json();
                    document.getElementById('markdownPreview').innerHTML = data.html;
                } catch(e) {}
            }, 300);
        };
        
        contentTextarea.addEventListener('input', () => {
            if(document.getElementById('markdownPreview').style.display !== 'none') {
                window.handleLivePreview();
            }
        });

        // --- GENERAL HELPERS ---
        function showNotification(msg, type='success') {
            const div = document.createElement('div');
            div.className = `notification ${type}`;
            div.innerHTML = `<i class="fas fa-${type==='success'?'check-circle':'exclamation-triangle'}"></i> ${msg}`;
            document.body.appendChild(div);
            setTimeout(() => div.remove(), 4000);
        }

        // --- SUBMIT FORM ---
        const form = document.getElementById('editPostForm');
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const btn = document.getElementById('saveBtn');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
            
            // Gather Data
            const formData = new FormData();
            formData.append('title', document.getElementById('title').value);
            formData.append('excerpt', document.getElementById('excerpt').value);
            formData.append('content', document.getElementById('content').value);
            formData.append('preview_image', document.getElementById('previewImage').value);
            formData.append('status', form.querySelector('select[name="status"]').value);

            const tags = Array.from(tagContainer.getElementsByClassName('tag')).map(t => t.innerText.replace('Ã—','').trim());
            const cats = Array.from(categoryContainer.getElementsByClassName('category')).map(c => c.dataset.categoryId);

            formData.append('tags', JSON.stringify(tags));
            formData.append('categories', JSON.stringify(cats));

            try {
                // Determine URL (Edit vs Create)
                const url = window.location.href.includes('edit') 
                    ? window.location.href.replace('edit', 'api/posts') 
                    : '/dashboard/api/posts';
                
                const method = window.location.href.includes('edit') ? 'PUT' : 'POST';

                const res = await fetch(url, {
                    method: method,
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: new URLSearchParams(formData)
                });
                
                const data = await res.json();
                if(data.success) {
                    showNotification("Post Saved Successfully!");
                    setTimeout(() => window.location.href = '/dashboard/posts', 1000);
                } else {
                    showNotification("Save Failed: " + (data.error || data.message), "error");
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            } catch(e) {
                showNotification("Network Error on Save", "error");
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        });

    })();
</script>
